    "typescript": "^5.0.4"
  },
  "scripts": {
    "test:ci": "NODE_ENV=test jest --runInBand --no-cache",
    "test:watch": "NODE_ENV=test TZ='Europe/Berlin' jest --watch --logHeapUsage",
    "test": "is-ci-cli test:ci test:watch",
    "lint": "eslint . --ext .ts,.txt",
    "verify": "ts-node ./lyricsTextValidator.ts",
    "verify:similarity": "ts-node ./lyricsSimilarityValidator.ts",
    "verify:similarity:mv": "ts-node ./lyricsSimilarityValidator.ts --overwrite",
    "verify:similarity:rm": "ts-node ./lyricsSimilarityValidator.ts --removeDuplicates",
    "reprocess:candidates": "ts-node ./lyricsTextReprocessor.ts",
    "dictionary:analyze": "ts-node lyricsRomanianDictionaryAnalyzer.ts",
    "dictionary:update": "ts-node lyricsRomanianDictionaryAnalyzer.ts --saveToDictionary"
  },
