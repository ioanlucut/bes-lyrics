  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.1",
    "@types/fs-extra": "^11.0.1",
    "@types/iconv": "^3.0.1",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/recursive-readdir": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "is-ci-cli": "^2.2.0",
