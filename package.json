{
  "name": "bes-lyrics",
  "version": "1.0.0",
  "description": "Cântări Biserica Emanuel Sibiu",
  "dependencies": {
    "@types/nspell": "^2.1.3",
    "@types/string-similarity": "^4.0.0",
    "chalk": "^4.1.2",
    "dictionary-ro": "^2.1.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "iconv": "^3.0.1",
    "lodash-es": "^4.17.21",
    "nspell": "^2.1.5",
    "recursive-readdir": "^2.2.3",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.3",
    "@types/fs-extra": "^11.0.1",
    "@types/iconv": "^3.0.1",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.4.2",
    "@types/recursive-readdir": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "is-ci-cli": "^2.2.0",
    "jest": "^29.6.1",
    "jest-watch-typeahead": "^2.2.2",
    "lodash": "^4.17.21",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6"
  },
  "type": "module",
  "scripts": {
    "test:ci": "NODE_ENV=test jest --runInBand --no-cache",
    "test:watch": "NODE_ENV=test TZ='Europe/Berlin' jest --watch --logHeapUsage",
    "test": "is-ci-cli test:ci test:watch",
    "lint": "eslint . --ext .ts",
    "verify": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./lyricsTextValidator.ts",
    "verify:similarity": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./lyricsSimilarityValidator.ts",
    "verify:similarity:mv": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./lyricsSimilarityValidator.ts --overwrite",
    "verify:similarity:rm": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./lyricsSimilarityValidator.ts --removeDuplicates",
    "dictionary:analyze": "node --no-warnings=ExperimentalWarning --loader ts-node/esm lyricsRomanianDictionaryAnalyzer.ts",
    "dictionary:update": "node --no-warnings=ExperimentalWarning --loader ts-node/esm lyricsRomanianDictionaryAnalyzer.ts --saveToDictionary",
    "reprocess:content": "node --no-warnings=ExperimentalWarning --loader ts-node/esm lyricsTextReprocessorRunner.ts",
    "reprocess:filename": "node --no-warnings=ExperimentalWarning --loader ts-node/esm lyricsFileNameReprocessorRunner.ts"
  },
  "author": "Ioan Lucuț",
  "license": "ISC"
}
